{
  /* https://aka.ms/tsconfig.json */
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // Type Checking
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,

    // Modules
    "baseUrl": "./",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./typings", "./src/typings", "./types", "./src/types"],

    // Emit
    "declaration": true,
    "declarationDir": "dist",
    "downlevelIteration": true,
    "importHelpers": true,
    "newLine": "lf",
    "noEmit": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,

    // JavaScript Support
    "allowJs": true,

    // Editor Support

    // Interop Constraints
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    // Backwards Compatibility

    // Language and Environment
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "useDefineForClassFields": true,

    // Compiler Diagnostics

    // Projects

    // Output Formatting

    // Completeness
    "skipLibCheck": true
  },
  "include": [
    "./**/.*.js",
    "./**/*.js",
    "./**/*.jsx",
    "./**/.*.ts",
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.vue"
  ],
  "exclude": [
    "logs",
    "*.log",
    "npm-debug.log*",
    "yarn-debug.log*",
    "yarn-error.log*",
    "lerna-debug.log*",
    "pnpm-debug.log*",
    "run",
    "report.[0-9]*.[0-9]*.[0-9]*.[0-9]*.json",
    "pids",
    "*.pid",
    "*.seed",
    "*.pid.lock",
    "lib-cov",
    "coverage",
    "*.lcov",
    ".nyc_output",
    ".grunt",
    "bower_components",
    ".lock-wscript",
    "build/Release",
    "node_modules",
    "jspm_packages",
    "web_modules",
    ".temp",
    ".tmp",
    "*.tsbuildinfo",
    ".npm",
    ".eslintcache",
    ".rpt2_cache",
    ".rts2_cache_cjs",
    ".rts2_cache_es",
    ".rts2_cache_umd",
    ".node_repl_history",
    "*.tgz",
    ".yarn-integrity",
    ".env",
    ".env.test",
    ".env.*.test",
    ".env.local",
    ".env.*.local",
    "*.local",
    ".cache",
    ".parcel-cache",
    "dist-electron",
    "dist_electron",
    "dist-tauri",
    "dist_tauri",
    "dist-cordova",
    "dist_cordova",
    "dist-capacitor",
    "dist_capacitor",
    ".next",
    "out",
    ".umi",
    ".umi-production",
    ".umi-test",
    ".nuxt",
    "dist",
    ".rax",
    ".vuepress/dist",
    "dist-ssr",
    "dist_ssr",
    "dist-ssg",
    "dist_ssg",
    ".serverless",
    ".dynamodb",
    ".s3",
    ".buckets",
    ".seeds",
    ".fusebox",
    ".tern-port",
    ".vscode-test",
    ".vscode",
    "*.vsix",
    ".idea",
    ".hbuilder",
    ".hbuilderx",
    ".yarn/cache",
    ".yarn/unplugged",
    ".yarn/build-state.yml",
    ".yarn/install-state.gz",
    ".pnp.*",
    ".DS_Store",
    "*.p12",
    "*.mobileprovision",
    "*.keystore"
  ],
  "compileOnSave": false
}
